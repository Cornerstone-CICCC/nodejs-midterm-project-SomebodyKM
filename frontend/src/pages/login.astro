---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Login">
  <main>
    <div class="wrapper">
      <div class="logo-intro">
        <h1>GameVault</h1>
        <p>Keep track of your game collection easily!</p>
      </div>
      <form id="login-form" novalidate>
        <div class="inputs">
          <label class="form-label" for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            pattern="^[a-zA-Z0-9_.+]+@gmail\.com$"
            placeholder="your@gmail.com"
            autocomplete="off"
            required
          />
          <label class="form-label" for="password">Password</label>
          <input
            type="password"
            name="password"
            id="password"
            placeholder="••••••••"
            required
          />
        </div>
        <button class="login-btn">Login</button>
        <p>Don’t have an account? <a href="/signup">Sign up</a></p>
      </form>
    </div>
  </main>
</Layout>

<style>
  main {
    display: flex;
    gap: 2rem;
    justify-content: center;
    align-items: start;
    background-color: #1f1e2e;
    flex: 1;
    padding: 2rem;
  }

  .wrapper {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    justify-content: center;
    align-items: center;
    max-width: 1440px;
  }

  .logo-intro {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 1rem;
  }

  .logo-intro h1 {
    color: #ffffff;
    font-family: "Orbitron", sans-serif;
    font-weight: 500;
  }

  .logo-intro p {
    color: #a7969c;
    text-align: center;
  }

  form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    background-color: #2e2f44;
    border: 1px solid #3c3a4f;
    padding: 2rem;
    box-shadow: 0px 0px 20px 5px #3c3a4f;
  }

  .inputs {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  label {
    color: #ffffff;
    font-weight: 600;
  }

  input {
    background-color: #666573;
    border-radius: 10px;
    border: none;
    padding: 10px;
    outline: none;
    caret-color: #ffffff;
    transition: all 0.3s linear;
  }

  input:active {
    transform: scale(0.95);
  }

  input:focus {
    border: 2px solid grey;
  }

  input::placeholder {
    color: #d2d2d2;
    font-family: "Poppins", sans-serif;
  }

  .login-btn {
    background-color: #00b4d7;
    color: #ffffff;
    padding: 0.7rem;
    border-radius: 10px;
    border: none;
    font-weight: 700;
    box-shadow: rgba(0, 180, 216, 0.4) 0px 0px 12px;
    transition: all 0.5s linear;
  }

  .login-btn:hover {
    background-color: #00829c;
    cursor: pointer;
  }

  form p {
    color: #a7969c;
    text-align: center;
  }

  form p a {
    text-decoration: none;
    color: #00b4d7;
  }

  form p a:hover {
    text-decoration: underline;
  }

  @media screen and (min-width: 768px) {
    form {
      min-width: 400px;
    }
  }
</style>

<script>
  const form = document.getElementById("login-form") as HTMLFormElement;

  form.addEventListener("submit", async (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    const email = formData.get("email");
    const password = formData.get("password");

    const res = await fetch("http://localhost:3500/users/login", {
      method: "POST",
      credentials: "include",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ email, password }),
    });

    const data = await res.json();

    if (!res.ok) {
      alert(data.message);
      return;
    }

    window.location.href = "/";
  });
</script>
