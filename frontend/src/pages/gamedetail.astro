---
import Layout from "../layouts/Layout.astro";
---

<Layout title="GameVault">
  <main>
    <div class="wrapper">
      <a href="/" class="home-link">
        <i class="fa-solid fa-angle-left"></i>
        Back to Dashboard
      </a>
      <div class="game-img">
        <img src="" alt="" />
      </div>
      <div class="title-add-btn">
        <h1></h1>
        <button class="add-btn" data-id="">
          <i class="fa-regular fa-heart"></i>
        </button>
      </div>
      <div class="rating-genres">
        <div class="rating">
          <p>Rating</p>
          <p></p>
        </div>
        <div class="genres">
          <p>Genres</p>
          <p></p>
        </div>
      </div>
      <div class="desc">
        <h3>About</h3>
        <p></p>
      </div>
    </div>
  </main>
</Layout>

<style>
  main {
    background-color: #1f1e2e;
    padding: 2rem;
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: start;
  }

  .wrapper {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    justify-content: center;
    align-items: center;
    max-width: 1440px;
  }

  .home-link {
    align-self: flex-start;
    text-decoration: none;
    color: #a7969c;
  }

  .home-link:hover {
    text-decoration: underline;
  }

  .game-img {
    min-width: 300px;
  }

  .game-img img {
    width: 100%;
    border: 1px solid #3c3a4f;
    border-radius: 10px;
    box-shadow: 0px 0px 20px 5px #3c3a4f;
  }

  .title-add-btn {
    display: flex;
    justify-content: space-between;
    width: 100%;
  }

  .title-add-btn h1 {
    font-family: "Orbitron", sans-serif;
    font-weight: 400;
    color: #ffffff;
  }

  .add-btn {
    border: none;
    background-color: transparent;
    width: 25px;
    height: 25px;
    font-size: 1.5rem;
    color: #ffffff;
    align-self: center;
    transition: all 0.5s linear;
  }

  .add-btn:hover {
    transform: scale(1.1);
    text-shadow: 0 0 10px #ffffff;
  }

  .rating-genres {
    display: grid;
    grid-template-columns: 1fr 1fr;
    width: 100%;
    gap: 1rem;
  }

  .rating {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1rem;
    background-color: #2e2f44;
    border-radius: 10px;
    border: 1px solid #3c3a4f;
  }

  .rating p:first-child {
    color: #a7969c;
    font-size: 12px;
  }

  .rating p:last-child {
    color: #a7969c;
  }

  .genres {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1rem;
    background-color: #2e2f44;
    border-radius: 10px;
    border: 1px solid #3c3a4f;
  }

  .genres p:first-child {
    color: #a7969c;
    font-size: 12px;
  }

  .genres p:last-child {
    color: #ffffff;
  }

  .desc {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1rem;
    background-color: #2e2f44;
    border-radius: 10px;
    border: 1px solid #3c3a4f;
    color: #ffffff;
  }

  .desc h3 {
    font-family: "Orbitron", sans-serif;
    font-weight: 500;
    font-size: 1.5rem;
  }

  .desc p {
    line-height: 200%;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", async () => {
    const params = new URLSearchParams(window.location.search);
    const gameId = params.get("id");

    if (!gameId) return;

    let isLoggedIn = false;
    let favorites: any[] = [];

    // Check login
    async function checkLogin() {
      try {
        const res = await fetch("http://localhost:3500/users/check-auth", {
          credentials: "include",
        });
        if (res.ok) isLoggedIn = true;
      } catch (err) {
        console.error(err);
      }
    }

    // Load user favorites
    async function loadFavorites() {
      if (!isLoggedIn) return;
      const res = await fetch("http://localhost:3500/games/favorites/list", {
        credentials: "include",
      });
      const data = await res.json();
      favorites = data.favorites;
    }

    const res = await fetch(`http://localhost:3500/games/${gameId}`);
    const data = await res.json();

    const game = data.game;

    if (!game) {
      console.error("Game not found:", data);
      return;
    }

    // UI
    const image = document.querySelector(".game-img img") as HTMLImageElement;
    image.src = game.background_image;
    image.alt = game.name;

    const title = document.querySelector(".title-add-btn h1") as HTMLElement;
    title.textContent = game.name;

    const rating = document.querySelector(
      ".rating p:last-child"
    ) as HTMLParagraphElement;
    rating.innerHTML = `<i class="fa-solid fa-star" style="color: #00b4d7"></i> <span style="font-size: 1.2rem; color: #ffffff">${game.rating}</span> / 5.00`;

    const genres = document.querySelector(
      ".genres p:last-child"
    ) as HTMLParagraphElement;
    genres.textContent = game.genres.map((g: any) => g.name).join(" | ");

    const desc = document.querySelector(".desc p") as HTMLParagraphElement;
    desc.innerHTML = game.description;

    // Heart button
    const addBtn = document.querySelector(".add-btn") as HTMLButtonElement;
    const heartIcon = addBtn.querySelector("i") as HTMLElement;
    addBtn.dataset.id = gameId;

    // Setup fave icon
    await checkLogin();
    await loadFavorites();

    let fave = favorites.find((f) => f.gameId == gameId);

    if (fave) {
      heartIcon.classList.remove("fa-regular");
      heartIcon.classList.add("fa-solid");
    }

    // Toggle fave
    addBtn.addEventListener("click", async () => {
      if (!isLoggedIn) {
        alert("Please log in to add games to your wishlist.");
        return;
      }

      fave = favorites.find((f) => f.gameId == gameId);

      // Remove fave
      if (fave) {
        const res = await fetch(
          `http://localhost:3500/games/favorites/${fave.id}`,
          { method: "DELETE", credentials: "include" }
        );

        if (res.ok) {
          heartIcon.classList.remove("fa-solid");
          heartIcon.classList.add("fa-regular");

          await loadFavorites(); // refresh
        }

        return;
      }

      // Add fave
      const resAdd = await fetch("http://localhost:3500/games/favorites", {
        method: "POST",
        credentials: "include",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(game),
      });

      if (resAdd.ok) {
        heartIcon.classList.remove("fa-regular");
        heartIcon.classList.add("fa-solid");

        await loadFavorites();
      }
    });
  });
</script>
